pipeline {
    agent {
       label "deploy"
    }
    stages {
          stage("connect") {
             steps {
               script {
                   sh '''
                   make image VERSION=show BRANCH=null FILE=./Modules/show/Dockerfile
                   make push VERSION=show
                   make pull VERSION=show  
                   chmod +x ./Modules/show/cve.sh
                   sudo docker run -i --rm -v $(pwd)/Modules/show/cve.sh:/Modules/show/cve.sh --entrypoint="/Modules/show/cve.sh" smartspace/storage:show
                   ''' 
               }
             }
          }
        }
}
